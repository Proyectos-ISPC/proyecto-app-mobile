<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Checkbox para Pago Virtual -->

    <!-- Logos de tarjetas -->
    <CheckBox
        android:id="@+id/checkBoxPagoVirtual"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="136dp"
        android:text="@string/virtual_pago"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/logosTarjetas"
        android:layout_width="122dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkBoxPagoVirtual">

        <ImageView
            android:id="@+id/logoVisa"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:src="@drawable/logo_visa"
            android:tint="@color/colorGray" />

        <ImageView
            android:id="@+id/logoMastercard"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/logo_mastercard"
            android:tint="@color/colorGray" />

        <ImageView
            android:id="@+id/logoAmex"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo_amex"
            android:tint="@color/colorGray" />
    </LinearLayout>

    <!-- Formulario para Pago Virtual -->
    <LinearLayout
        android:id="@+id/formularioPagoVirtual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/form_border"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logosTarjetas">

        <!-- Campos del formulario -->
        <EditText
            android:id="@+id/editTextNombreCompleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Completo" />

        <EditText
            android:id="@+id/editTextNumeroTarjeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de Tarjeta"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextFechaExpiracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Expiración"
            android:inputType="date" />

        <EditText
            android:id="@+id/editTextCodigoSeguridad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Código de Seguridad"
            android:inputType="number" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
